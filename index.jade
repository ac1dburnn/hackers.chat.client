doctype html
html
	head
		meta(charset="utf-8")
		title hack.chat
		link(rel="stylesheet", href="/style.css")
		link(rel="stylesheet", href="/katex/katex.min.css")
		link#scheme-link(rel="stylesheet", href="/schemes/atelier-dune.css")
		script(src="/katex/katex.min.js")
		script(src="/katex/contrib/auto-render.min.js")
	body
		article.container
			#messages.messages

		footer#footer
			.container
				form#chatform.messages
					textarea#chatinput(type='text', autocomplete='off')

		nav#sidebar
			.sidebar-content
				p
					input#pin-sidebar(type="checkbox")
					label(for="pin-sidebar") Pin sidebar
				h4 Settings
				p
					input#joined-left(type="checkbox", checked)
					label(for="joined-left") Join/left notify
				p
					button#clear-history Clear history
				h4 Color scheme
				select#scheme-selector
				h4 Users online
				p (Click user to invite)
				ul#users
				
		nav#hack-sidebar
			.sidebar-content
				h4 Custom Settings
				p
					label("for=nick-settings") Nick
					input#nick-settings.js-nick.outline(type="text")
				p
					label("for=ignore-settings") Ignored
					textarea.js-ignore.list-edit.outline(type="text", listName="ignored")
					
				p
					label("for=ignore-settings") Friends
					textarea.js-ignore.list-edit.outline(type="text", listName="friends")
					
				p
					button.the-button.fancy-button 

		script(src="/client.js")
